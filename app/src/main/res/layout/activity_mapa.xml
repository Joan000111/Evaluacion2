<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ABEBD2">

    <!--
    el fragment se añade a mano, agregas el id, name, layout width y height, los tools de abajo
    y luego reza al señor para que no te de un error raro, revisa los textos en rojo y le das
    sí a lo que salga con tal de que funcione (vela en mano(tuve fé))
    -->
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="358dp"
        android:layout_height="352dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".mapa"
        tools:ignore="MissingClass"></fragment>

</androidx.constraintlayout.widget.ConstraintLayout>